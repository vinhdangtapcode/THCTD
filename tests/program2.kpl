Program Program2; 

Var n : Integer;
    sum : Integer;
    digit : Integer;
    temp : Integer;

Begin
    n := ReadI;
    
    sum := 0;
    
    While n > 0 Do
    Begin
        temp := n / 10;
        digit := n - temp * 10;
        
        sum := sum + digit;
        
        n := n / 10;
    End;
    
    Call WriteLn;
    Call WriteI(sum);
    Call WriteLn;
End.
